{% extends "base.html.twig" %}

{% block title %}Admin{% endblock %}

{% block monTitre %} 
{% if isModif %} Modification Aliment {{ aliment.nom }}
{% else %}
    Ajout d'un aliment
{% endif %}
{% endblock %}
{% block body %}    
    
{# formulaire de modification #}
<div class="container">
    {# début du formulaire  #}
    {{ form_start(form) }} 
    <div class="row">
        <div class="col-6">
            {% if isModif %}
            <img src=" {{ asset('images/aliments/' ~ aliment.image )}}" style="width: 20%" alt=" {{ aliment.nom}}">
            {% endif %}
            <div> {{ form_row(form.imageFile) }} </div>
                {# form_row permet d'ajouter des attributs class et label à nos inputs #}
                {{ form_row(form.nom, {"attr" : {'class':'text-danger bg-success'}, "label":"Nom de l'aliment"}) }}
                {# ajout du champ type #}
                <div> {{ form_row(form.type) }} </div>
            </div>
        <div class="col-6">
            {# affichage du formulaire en brut dans attribut personnalisé #}
            {{ form_widget(form) }}
        </div>
    </div> 
    {% if isModif %}
    {# ici c'est le bouton submit que j'ai créer pour envoyer le formulaire #}
        <input class="btn btn-primary" type="submit" value="Modifier">
    {% else %}
    <input class="btn btn-primary" type="submit" value="Ajouter">
    {% endif %} 
    {# fin du formulaire #}
    {{ form_end(form) }}       
</div>
{% endblock %}